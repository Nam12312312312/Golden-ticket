  <div id="reset" onclick="reset()">ƒê·∫∑t l·∫°i v·ªÅ 100</div>

  <script>
    let count = localStorage.getItem('goldenTickets');
    if (count === null) {
      count = 100;
      localStorage.setItem('goldenTickets', count);
    }
    document.getElementById('count').textContent = count;

    function decrease() {
      count = parseInt(count);
      if (count > 0) {
        count -= 1;
        localStorage.setItem('goldenTickets', count);
        document.getElementById('count').textContent = count;
      } else {
        alert("H·∫øt v√© r·ªìi nha üò≠");
      }
    }

    function reset() {
      if (confirm("B·∫°n c√≥ ch·∫Øc mu·ªën ƒë·∫∑t l·∫°i v·ªÅ 100 v√© kh√¥ng?")) {
        count = 100;
        localStorage.setItem('goldenTickets', count);
        document.getElementById('count').textContent = count;
      }
    }
  </script>
